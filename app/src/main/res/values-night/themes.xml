<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme application theme -->
    <style name="Theme.AssetManagementSystem.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_800</item>
        <item name="colorPrimaryVariant">@color/primary_900</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_700</item>
        <item name="colorSecondaryVariant">@color/secondary_800</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background and surface colors -->
        <item name="colorSurface">@color/primary_700</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>


        <item name="textInputStyle">@style/CustomMaterialTextInputLayoutStyle</item>
        <item name="imageButtonStyle">@style/CustomImageButtonStyle</item>
        <item name="cardViewStyle">@style/CustomCardViewStyle</item>
    </style>

    <style name="CustomMaterialTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" >
        <item name="boxBackgroundColor">@color/primary_500</item>
        <item name="boxStrokeColor">@color/primary_500</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="CustomImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="LinearLayoutFormStyle">
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@color/primary_700</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CustomButtonWithDrawableStyle" parent="Widget.AppCompat.Button">
        <item name="drawableTint">@color/primary_50</item>
    </style>


    <style name="CustomSwitchStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/input_icon_color</item>
    </style>

    <style name="CustomBigButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawableTint">@color/primary_50</item>
    </style>

    <style name="CustomCardViewStyle" parent="CardView">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="CustomListItemStyle">
        <item name="android:background">@color/primary_500</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CustomLinearLayoutForLists">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@color/primary_700</item>
    </style>

    <style name="CustomSpinnerItemStyle">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/input_icon_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/primary_500</item>
    </style>

    <style name="CustomSpinnerLayoutStyle">
        <item name="android:background">@color/primary_500</item>
    </style>

    <style name="CustomNavigationStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@color/primary_500</item>
        <item name="itemTextColor">@color/primary_50</item>
        <item name="itemIconTint">@color/primary_50</item>
    </style>

</resources>
